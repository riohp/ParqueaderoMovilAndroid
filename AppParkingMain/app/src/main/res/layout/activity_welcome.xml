<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp"
        tools:context=".welcome.WelcomeActivity">

    <ImageView
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:src="@drawable/icon_home_welcome"
    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:text="ENCUENTRA"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            android:textSize="45dp"
            android:textColor="@android:color/black"
            android:layout_gravity="center"
            android:fontFamily="@font/poppins_black"
    >
    </TextView>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:text="TU ESPACIO IDEAL"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="43dp"
            android:layout_gravity="center"
            android:fontFamily="@font/poppins_black"
    >
    </TextView>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Tu Portal Personalizado para Aparcar sin Estrés: "
            android:layout_gravity="center"
            android:fontFamily="@font/poppins_semibold"
    >
    </TextView>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¡Inicia Sesión para Acceso Instantáneo o Regístrate "
            android:layout_gravity="center"
            android:fontFamily="@font/poppins_semibold"

    >
    </TextView>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="para Más Funcionalidades! "
            android:layout_gravity="center"
            android:fontFamily="@font/poppins_semibold"
            android:layout_marginBottom="10dp"
    >
    </TextView>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:background="#FEFAB0"
            android:elevation="8dp"
    >

        <Button
                android:id="@+id/btnViewCar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#FEFAB0"
                android:text="VER MI VEHICULO"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textSize="25sp"
                android:fontFamily="@font/poppins_bold"
        />
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginRight="90dp"
            android:layout_marginLeft="90dp"
            android:background="@android:color/black"
            android:elevation="8dp"
    >

    <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@android:color/black"
            android:text="Iniciar sesion"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textSize="19sp"
            android:fontFamily="@font/poppins_bold"
    />

    </LinearLayout>
</LinearLayout>