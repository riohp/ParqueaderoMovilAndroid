<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    app:cardBackgroundColor="#FEE8E4"
    android:layout_margin="10dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
        >
            <ImageView
                android:layout_marginLeft="3dp"
                android:layout_width="90dp"
                android:layout_height="150dp"
                android:src="@drawable/guy_1"
            />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
            >
                <TextView
                        android:id="@+id/etpNombres"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Miguel Diaz"
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppins_bold"
                        android:textSize="35dp"
                        android:autoSizeTextType="uniform"
                        android:textAlignment="textStart"
                />

                <TextView
                        android:id="@+id/etqIdentificacion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10072128731"
                        android:autoSizeTextType="uniform"
                        android:fontFamily="@font/poppins_semibold"
                />

                <TextView
                        android:id="@+id/etqEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="miguel091@mailsito.com"
                        android:autoSizeTextType="uniform"
                        android:fontFamily="@font/poppins_semibold"
                />

                <TextView
                        android:id="@+id/etqRol"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="VENDEDOR"
                        android:autoSizeTextType="uniform"
                        android:fontFamily="@font/poppins_semibold"
                />
            </LinearLayout>
        </LinearLayout>
        <View
                android:id="@+id/etpEstado"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:background="@color/green_lighter" />
    </FrameLayout>


</androidx.cardview.widget.CardView>