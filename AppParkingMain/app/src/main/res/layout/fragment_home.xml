<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/md_theme_ligth_white"
        tools:context=".ui.home.HomeFragment"
>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_bottom_rounded"
        android:elevation="15dp"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="Hola, "
            android:textColor="@android:color/black"
            android:textSize="35dp"></TextView>

        <TextView
            android:id="@+id/etqName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="Carlitos"
            android:textColor="@android:color/black"
            android:textSize="35dp"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="!"
            android:textColor="@android:color/black"
            android:textSize="35dp"></TextView>

    </LinearLayout>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ultimo vehiculo ingresado"
            android:fontFamily="@font/poppins_bold"
            android:textSize="18dp"
            android:textColor="@color/md_theme_dark_blue"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="25dp"
    >
    </TextView>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_margin="12dp"
            android:padding="16dp"
            android:elevation="8dp"
    >

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
        >

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="XYA-087"
                    android:textColor="@color/md_theme_dark_blue"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="18dp"
            >
            </TextView>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=", "
                    android:textColor="@color/md_theme_dark_blue"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="18dp"
            >
            </TextView>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Moto"
                    android:textColor="@color/md_theme_dark_blue"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="18dp"
            >
            </TextView>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
        >

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#Ticket"
                    android:textColor="@color/md_theme_ligth_gray"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="17dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="50dp"
            >
            </TextView>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="33412"
                    android:textColor="@color/md_theme_ligth_gray"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="16dp"
            >
            </TextView>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
        >

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10:00"
                    android:textColor="@color/md_theme_dark_blue"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="22dp"
                    android:layout_marginRight="6dp"

            >
            </TextView>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AM"
                    android:textColor="@color/md_theme_dark_blue"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="22dp"
            >
            </TextView>




        </LinearLayout>

    </LinearLayout>




</LinearLayout>