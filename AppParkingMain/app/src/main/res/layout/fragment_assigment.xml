<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="10dp"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.assingment.AssigmentFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_rounded_r"
        android:orientation="vertical"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="80dp"
        android:paddingBottom="45dp"
        android:elevation="8dp"
        >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="60dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="Asigna un vendedor"
                android:textSize="30sp"
                android:fontFamily="@font/poppins_bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="a un parqueadero"
                android:textSize="30sp"
                android:fontFamily="@font/poppins_bold"
                android:autoSizeTextType="uniform"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/vendedor"
            style="@style/ExposedDropdownMenuWhiteWithBorder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:hint="Seleccione un Vendedor"
            app:boxCornerRadiusBottomEnd="5dp"
            app:boxCornerRadiusBottomStart="5dp"
            app:boxCornerRadiusTopEnd="5dp"
            app:boxCornerRadiusTopStart="5dp"
            app:hintTextColor="@color/black"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <AutoCompleteTextView
                android:id="@+id/etpVendedor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textSize="20sp" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/parqueadero"
                style="@style/ExposedDropdownMenuWhiteWithBorder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:hint="Seleccione un parqueadero"
                app:boxCornerRadiusBottomEnd="5dp"
                app:boxCornerRadiusBottomStart="5dp"
                app:boxCornerRadiusTopEnd="5dp"
                app:boxCornerRadiusTopStart="5dp"
                app:boxStrokeColor="@color/black"
                app:hintTextColor="@color/black"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

                <AutoCompleteTextView
                    android:id="@+id/etpParqueadero"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:textSize="20sp" />

            </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            >

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAsignar"
                android:layout_width="200dp"
                android:layout_height="70dp"
                android:background="@null"
                style="@style/SquaredOutlinedButton"
                android:text="Asignar"
                app:strokeColor="@color/black"
                app:strokeWidth="2dp"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:paddingTop="5dp"
                android:fontFamily="@font/poppins_semibold"
            />
        </LinearLayout>

    </LinearLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnRegrasarVista"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:clickable="true"
            android:src="@drawable/baseline_arrow_back_24"
            app:backgroundTint="@android:color/white"
            app:boxStrokeColor="@android:color/black"
            app:elevation="0dp"
            app:fabCustomSize="48dp" />

</FrameLayout>
